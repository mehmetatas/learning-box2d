package com.turpgames.input;

public abstract class TouchCommand extends InputCommand {
	public final static TouchCommand touchDownCommand = new TouchCommand.TouchDownCommand();
	
	float x;
	float y;
	int pointer;

	private class TouchUpCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchUp(x, y, pointer);
		}
	}

	private class TouchDownCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDown(x, y, pointer);
		}
	}

	private class TouchDraggedommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDragged(x, y, pointer);
		}
	}
}
