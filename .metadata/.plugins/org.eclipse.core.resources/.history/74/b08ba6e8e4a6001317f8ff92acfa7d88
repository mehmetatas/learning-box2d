package com.turpgames.input;

public abstract class TouchCommand extends InputCommand {
	public final static TouchCommand touchDown = new TouchDownCommand();
	public final static TouchCommand touchUp = new TouchUpCommand();
	public final static TouchCommand touchDragged = new TouchDraggedCommand();
	
	float x;
	float y;
	int pointer;

	private static class TouchDownCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDown(x, y, pointer);
		}
	}

	private static class TouchUpCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchUp(x, y, pointer);
		}
	}

	private static class TouchDraggedCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDragged(x, y, pointer);
		}
	}
}
