package com.turpgames.physics.body.builders;

import java.util.ArrayList;
import java.util.List;

import com.badlogic.gdx.math.Vector2;
import com.badlogic.gdx.physics.box2d.ChainShape;
import com.badlogic.gdx.physics.box2d.CircleShape;

public class ChainShapeBuilder {
private final static ChainShapeBuilder instance = new ChainShapeBuilder();
	
	private final List<Vector2> vertices = new ArrayList<Vector2>();
	private float radius;
	private boolean isLoop;
	
	private ChainShapeBuilder() {
		
	}
	
	private void reset() {
		vertices.clear();
		isLoop = false;
		radius = 0;
	}
	
	public ChainShapeBuilder setRadius(float r) {
		radius = r;
		return this;
	}
	
	public ChainShapeBuilder setPosition(float x, float y) {
		position.set(x, y);
		return this;
	}
	
	public ChainShape build() {
		ChainShape chain = new ChainShape();
		chain.setPosition(position);
		chain.setRadius(radius);
		return chain;
	}
	
	public static CircleShapeBuilder newChain() {
		instance.reset();
		return instance;
	}
}
