package com.turpgames.physics.box2d.builders;

public final class Box2D {
	private Box2D() {

	}
	
	public static class BodyBuilders {
		public static BodyBuilder newStaticBody() {
			return BodyBuilder.newStaticBody();
		}
		
		public static BodyBuilder newDynamicBody() {
			return BodyBuilder.newDynamicBody();
		}
		
		public static BodyBuilder newKinematicBody() {
			return BodyBuilder.newKinematicBody();
		}
	}
	
	public static class ShapeBuilders {
		public static PolygonShapeBuilder newPolygon() {
			return PolygonShapeBuilder.newPolygon();
		}
		
		public static CircleShapeBuilder newCircle() {
			return CircleShapeBuilder.newCircle();
		}
		
		public static ChainShapeBuilder newChain() {
			return ChainShapeBuilder.newChain();
		}
		
		public static LoopedChainShapeBuilder newLoopedChain() {
			return LoopedChainShapeBuilder.newLoopedChain();
		}
	}
	
	public static class FixtureBuilders {
		
	}
}
