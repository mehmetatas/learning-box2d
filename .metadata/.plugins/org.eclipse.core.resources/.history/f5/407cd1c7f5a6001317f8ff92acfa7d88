package com.turpgames.physics.body.builders;

import com.badlogic.gdx.math.Circle;
import com.badlogic.gdx.math.Vector2;

public class CircleShapeBuilder {
	private final static CircleShapeBuilder instance = new CircleShapeBuilder();
	
	private final Vector2 position = new Vector2();
	private float radius;
	
	private CircleShapeBuilder() {
		
	}
	
	private void reset() {
		position.set(0, 0);
		radius = 0;
	}
	
	public CircleShapeBuilder radius(float r) {
		radius = r;
		return this;
	}
	
	public CircleShapeBuilder position(float x, float y) {
		position.set(x, y);
		return this;
	}
	
	public Circle build() {
		return new Circle(position, radius);
	}
	
	public static CircleShapeBuilder newCircle() {
		instance.reset();
		return instance;
	}
}
