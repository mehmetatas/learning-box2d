package com.turpgames.input;

public final class TouchCommand extends InputCommand {
	private float x;
	private float y;
	private int pointer;
	
	TouchCommand() {
		
	}
	
	void set(float x, float y, int pointer) {
		this.x = x;
		this.y = y;
		this.pointer = pointer;
		setAsUsed();
	}

	public float getX() {
		return x;
	}

	public float getY() {
		return y;
	}

	public int getPointer() {
		return pointer;
	}
}
