package com.turpgames.input;

public abstract class TouchCommand extends InputCommand {
	float x;
	float y;
	int pointer;

	class TouchUpCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchUp(x, y, pointer);
		}
	}

	class TouchDownCommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDown(x, y, pointer);
		}
	}

	class TouchDraggedommand extends TouchCommand {
		@Override
		boolean execute(IInputListener listener) {
			return listener.touchDragged(x, y, pointer);
		}
	}
}
