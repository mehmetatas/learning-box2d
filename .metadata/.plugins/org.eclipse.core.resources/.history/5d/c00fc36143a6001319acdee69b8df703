package com.turpgames.input;

public interface IInputListener {
	KeyCommand getKeyDownCommand();
	KeyCommand getKeyUpCommand();
	TouchCommand getTouchDownCommand();
	TouchCommand getTouchUpCommand();
	TouchCommand getTouchDraggedCommand();
	TapCommand getTapCommand();
	LongPressCommand getLongPressCommand();
	boolean keyDown(int keycode);

	boolean keyUp(int keycode);

	boolean touchDown(int screenX, int screenY, int pointer);

	boolean touchUp(int screenX, int screenY, int pointer);

	boolean touchDragged(int screenX, int screenY, int pointer);

	boolean tap(float x, float y, int count);

	boolean longPress(float x, float y);
}
